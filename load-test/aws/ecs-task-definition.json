{
  "family": "line-clone-load-test",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/line-clone-load-test-role",
  "containerDefinitions": [
    {
      "name": "playwright-load-test",
      "image": "ACCOUNT_ID.dkr.ecr.ap-southeast-1.amazonaws.com/line-clone-load-test:latest",
      "essential": true,
      "cpu": 512,
      "memory": 1024,
      "memoryReservation": 512,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/line-clone-load-test",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "APP_URL",
          "value": "https://main.d3i99hvdc3wo2j.amplifyapp.com/"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-southeast-1"
        },
        {
          "name": "CONCURRENT_USERS",
          "value": "20"
        },
        {
          "name": "MESSAGES_PER_USER",
          "value": "50"
        },
        {
          "name": "USER_TABLE_NAME",
          "value": "your-user-table"
        },
        {
          "name": "CHAT_ROOM_TABLE_NAME",
          "value": "your-chatroom-table"
        },
        {
          "name": "CHAT_ROOM_MEMBER_TABLE_NAME",
          "value": "your-member-table"
        }
      ],
      "portMappings": [],
      "mountPoints": [],
      "volumesFrom": []
    }
  ],
  "volumes": [],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Project",
      "value": "line-clone-load-test"
    },
    {
      "key": "Environment",
      "value": "test"
    }
  ]
}